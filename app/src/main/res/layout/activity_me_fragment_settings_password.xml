<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <FrameLayout
        android:layout_height="@dimen/action_bar_height"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        >

        <LinearLayout
            android:id="@+id/back"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            >

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:layout_width="48dp"
                android:layout_height="match_parent"
                app:materialIcon="chevron_left"
                app:materialIconColor="@color/white"
                app:materialIconSize="24dp"
                android:scaleType="center"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="设置"
                android:textColor="@color/white"
                android:textSize="@dimen/action_bar_text_size"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="@dimen/action_bar_title_text_size"
            />

        <TextView
            android:id="@+id/finish"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center_vertical|right"
            android:text="完成"
            android:textColor="@color/yellow"
            android:textSize="@dimen/action_bar_text_size"
            android:paddingRight="20dp"
            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/old"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_me_tab_height"
        android:background="@drawable/selector_linear_layout"
        android:clickable="true"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_me_tab_title"
            android:text="原密码："
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/old_edit"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_me_tab_title"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:maxLines="1"
            android:background="@null"
            android:clickable="false"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_me_tab_height"
        android:background="@drawable/selector_linear_layout"
        android:clickable="true"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_me_tab_title"
            android:text="新密码："
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/new_edit"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_me_tab_title"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:maxLines="1"
            android:background="@null"
            android:clickable="false"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/again"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_me_tab_height"
        android:background="@drawable/selector_linear_layout"
        android:clickable="true"
        android:layout_marginTop="1dp"
        >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_me_tab_title"
            android:text="确认新密码："
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            />

        <EditText
            android:id="@+id/again_edit"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_me_tab_title"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:maxLines="1"
            android:background="@null"
            android:clickable="false"
            />

    </LinearLayout>

</LinearLayout>