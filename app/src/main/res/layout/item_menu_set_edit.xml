<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_ly"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        app:siShape="@drawable/shape_rounded_rectangle"
        android:src="@drawable/empty_logo"
        app:siSquare="true"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginRight="-80dp"
        android:layout_marginEnd="-80dp"
        >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="新鲜热翔"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                />

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:id="@+id/eye_off"
                android:layout_width="48dp"
                android:layout_height="40dp"
                app:materialIcon="eye_off"
                app:materialIconColor="@color/black"
                app:materialIconSize="24dp"
                android:scaleType="center"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            >

            <me.grantland.widget.AutofitTextView
                android:id="@+id/new_tags"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="孕妇别点"
                android:textSize="13dip"
                android:textColor="@color/white"
                android:background="@drawable/shape_rounded_rectangle_new_tag"
                android:padding="2dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|bottom"
                    android:text="¥"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="-1.5dip"
                    android:gravity="bottom"
                    android:textColor="@color/price_color"
                    />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="10"
                    android:textSize="25sp"
                    android:layout_marginBottom="-1.5dip"
                    android:textColor="@color/price_color"
                    />

                <TextView
                    android:id="@+id/qi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|bottom"
                    android:text="起"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginBottom="-1.5dip"
                    android:gravity="bottom"
                    android:textColor="@color/price_color"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_width="80dp"
        >

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:materialIcon="chevron_right"
            app:materialIconColor="@color/black"
            app:materialIconSize="24dp"
            android:layout_marginLeft="20dp"
            android:scaleType="center"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            />

        <com.github.lguipeng.library.animcheckbox.AnimCheckBox
            android:id="@+id/check"
            android:layout_gravity="center_vertical|left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="29dp"
            app:stroke_width="1dp"
            app:stroke_color="@color/colorPrimary"
            app:circle_color="@color/background_gray"/>

    </FrameLayout>

</LinearLayout>