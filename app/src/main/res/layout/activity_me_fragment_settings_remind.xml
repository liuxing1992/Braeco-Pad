<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.braeco.braecowaiter.MeFragmentSettingsRemind">

    <FrameLayout
        android:layout_height="@dimen/action_bar_height"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        >

        <LinearLayout
            android:id="@+id/back"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            >

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:layout_width="48dp"
                android:layout_height="match_parent"
                app:materialIcon="chevron_left"
                app:materialIconColor="@color/white"
                app:materialIconSize="24dp"
                android:scaleType="center"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="设置"
                android:textColor="@color/white"
                android:textSize="@dimen/action_bar_text_size"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="消息提醒"
            android:textColor="@color/white"
            android:textSize="@dimen/action_bar_title_text_size"
            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/notification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_me_tab_height"
        android:background="@drawable/selector_linear_layout"
        android:clickable="true"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_me_tab_title"
            android:text="接受新消息通知"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            />
        <com.github.lguipeng.library.animcheckbox.AnimCheckBox
            android:id="@+id/notification_check"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:padding="4dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            app:stroke_width="1dp"
            app:stroke_color="@color/colorPrimary"
            app:circle_color="@color/background_gray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sound"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_me_tab_height"
        android:background="@drawable/selector_linear_layout"
        android:clickable="true"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_me_tab_title"
            android:text="声音"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            />
        <com.github.lguipeng.library.animcheckbox.AnimCheckBox
            android:id="@+id/sound_check"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:padding="4dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            app:stroke_width="1dp"
            app:stroke_color="@color/colorPrimary"
            app:circle_color="@color/background_gray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vibrate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_me_tab_height"
        android:background="@drawable/selector_linear_layout"
        android:clickable="true"
        android:layout_marginTop="1dp"
        >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_me_tab_title"
            android:text="震动"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            />
        <com.github.lguipeng.library.animcheckbox.AnimCheckBox
            android:id="@+id/vibrate_check"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:padding="4dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            app:stroke_width="1dp"
            app:stroke_color="@color/colorPrimary"
            app:circle_color="@color/background_gray"/>

    </LinearLayout>


</LinearLayout>
