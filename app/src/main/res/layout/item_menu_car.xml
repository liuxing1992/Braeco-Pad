<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="新鲜热翔"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/tags"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="剩10件"
            android:textSize="13dip"
            android:textColor="@color/white"
            android:background="@drawable/shape_rounded_rectangle_tag"
            android:padding="2dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/attributes"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="冷、百香果"
        android:textColor="@android:color/black"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />

    <LinearLayout
        android:id="@+id/listview_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@color/primaryYellow"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            />

        <com.braeco.braecowaiter.ExpandedListView
            android:id="@+id/list_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:divider="@color/transparent"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        >

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="¥ 10"
            android:textSize="17sp"
            android:textColor="@color/price_color"
            />

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/minus"
            android:layout_width="30dp"
            android:layout_height="48dp"
            app:materialIcon="minus_circle"
            app:materialIconColor="@color/minus"
            app:materialIconSize="30dp"
            android:scaleType="center"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/num"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="999"
            android:maxLines="1"
            android:textSize="19sp"
            android:textColor="@android:color/black"
            />

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/plus"
            android:layout_width="30dp"
            android:layout_height="48dp"
            app:materialIcon="plus_circle"
            app:materialIconColor="@color/add"
            app:materialIconSize="30dp"
            android:layout_marginRight="10dp"
            android:scaleType="center"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

</LinearLayout>