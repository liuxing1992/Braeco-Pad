<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="新鲜热翔"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/tags"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="孕妇别点"
            android:textSize="13dip"
            android:textColor="@color/white"
            android:background="@drawable/shape_rounded_rectangle_tag"
            android:paddingTop="2dp"
            android:paddingLeft="5dp"
            android:paddingBottom="2dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/attributes"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="冷、百香果"
        android:textColor="@android:color/black"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        >

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="¥ 10"
            android:textSize="17sp"
            android:textColor="@color/price_color"
            />

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/minus"
            android:layout_width="30dp"
            android:layout_height="48dp"
            app:materialIcon="minus_circle"
            app:materialIconColor="@color/minus"
            app:materialIconSize="30dp"
            android:scaleType="center"
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/num"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="99"
            android:textSize="19sp"
            android:textColor="@android:color/black"
            />

        <ImageView
            android:id="@+id/plus"
            android:layout_height="48dp"
            android:layout_width="25dp"
            android:src="@drawable/refund"
            android:layout_marginRight="10dp"
            />

        <!--<net.steamcrafted.materialiconlib.MaterialIconView-->
            <!--android:id="@+id/plus"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="48dp"-->
            <!--app:materialIcon="delete"-->
            <!--app:materialIconColor="@color/add"-->
            <!--app:materialIconSize="30dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:scaleType="center"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--/>-->

    </LinearLayout>

</LinearLayout>