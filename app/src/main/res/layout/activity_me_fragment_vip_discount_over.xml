<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.braeco.braecowaiter.MeFragmentShop"
    android:orientation="vertical"
    android:background="@color/background_gray">

    <LinearLayout
        android:layout_height="@dimen/action_bar_height"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        >

        <LinearLayout
            android:id="@+id/back"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            >

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:layout_width="48dp"
                android:layout_height="match_parent"
                app:materialIcon="chevron_left"
                app:materialIconColor="@color/white"
                app:materialIconSize="24dp"
                android:scaleType="center"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="折扣设置"
                android:textColor="@color/white"
                android:textSize="@dimen/action_bar_text_size"
                />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="优惠叠加"
            android:textColor="@color/white"
            android:textSize="@dimen/action_bar_title_text_size"
            />

        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确认修改"
            android:textColor="@color/primaryYellow"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/action_bar_title_text_size"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_me_vip_discount"
        android:background="@drawable/selector_linear_layout"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/fragment_me_tab_title"
            android:text="会员折扣可叠加到那些促销工具之后？"
            android:textColor="@color/black"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/discount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_me_vip_discount"
        android:background="@drawable/selector_linear_layout"
        android:clickable="true"
        android:layout_marginTop="1dip"
        >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_me_tab_title"
            android:text="折扣优惠"
            android:paddingLeft="60dp"
            android:gravity="center_vertical"
            />

        <com.github.lguipeng.library.animcheckbox.AnimCheckBox
            android:id="@+id/discount_check"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:padding="4dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            app:stroke_width="1dp"
            app:stroke_color="@color/colorPrimary"
            app:circle_color="@color/background_gray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/minus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_me_vip_discount"
        android:background="@drawable/selector_linear_layout"
        android:clickable="true"
        android:layout_marginTop="1dip"
        >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_me_tab_title"
            android:text="立减优惠"
            android:paddingLeft="60dp"
            android:gravity="center_vertical"
            />

        <com.github.lguipeng.library.animcheckbox.AnimCheckBox
            android:id="@+id/minus_check"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:padding="4dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            app:stroke_width="1dp"
            app:stroke_color="@color/colorPrimary"
            app:circle_color="@color/background_gray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/half"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_me_vip_discount"
        android:background="@drawable/selector_linear_layout"
        android:clickable="true"
        android:layout_marginTop="1dip"
        >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_me_tab_title"
            android:text="第二杯半价"
            android:paddingLeft="60dp"
            android:gravity="center_vertical"
            />

        <com.github.lguipeng.library.animcheckbox.AnimCheckBox
            android:id="@+id/half_check"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:padding="4dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            app:stroke_width="1dp"
            app:stroke_color="@color/colorPrimary"
            app:circle_color="@color/background_gray"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/limit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_me_vip_discount"
        android:background="@drawable/selector_linear_layout"
        android:clickable="true"
        android:layout_marginTop="1dip"
        >

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fragment_me_tab_title"
            android:text="限量供应"
            android:paddingLeft="60dp"
            android:gravity="center_vertical"
            />

        <com.github.lguipeng.library.animcheckbox.AnimCheckBox
            android:id="@+id/limit_check"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:padding="4dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            app:stroke_width="1dp"
            app:stroke_color="@color/colorPrimary"
            app:circle_color="@color/background_gray"/>

    </LinearLayout>

</LinearLayout>