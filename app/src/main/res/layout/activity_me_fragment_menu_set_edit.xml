<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background_gray">

    <com.braeco.braecowaiter.UIs.TitleLayout
        android:id="@+id/title_layout"
        android:layout_height="@dimen/action_bar_height"
        android:layout_width="match_parent"
        app:nbEditText="完成"
        />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_height="200dp"
                android:layout_width="match_parent"
                >

                <com.flaviofaria.kenburnsview.KenBurnsView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:id="@+id/empty_tip"
                    android:layout_height="200dp"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:text="点击添加套餐图片"
                    />

            </FrameLayout>

            <LinearLayout
                android:id="@+id/c_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="*套餐中文名"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/c_name_text"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="臭豆腐臭豆腐臭豆腐臭豆腐臭豆腐臭豆腐臭豆腐臭豆腐臭豆腐臭豆腐臭豆"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical|right"
                    />

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    app:materialIcon="chevron_right"
                    app:materialIconColor="@color/colorPrimary"
                    app:materialIconSize="24dp"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="0.5dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="*套餐总价"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/price_text"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="¥10.00"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical|right"
                    />

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    app:materialIcon="chevron_right"
                    app:materialIconColor="@color/colorPrimary"
                    app:materialIconSize="24dp"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/e_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="0.5dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="套餐英文名"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/e_name_text"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="Smelly Tofu"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical|right"
                    />

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    app:materialIcon="chevron_right"
                    app:materialIconColor="@color/colorPrimary"
                    app:materialIconSize="24dp"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="0.5dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="标签提醒"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/tags_text"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text=""
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    />

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    app:materialIcon="chevron_right"
                    app:materialIconColor="@color/colorPrimary"
                    app:materialIconSize="24dp"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/set"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="*品类放置"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/set_text"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text=""
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical|right"
                    />

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    app:materialIcon="chevron_right"
                    app:materialIconColor="@color/colorPrimary"
                    app:materialIconSize="24dp"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/attributes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="*子项设置"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/attributes_text"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text=""
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical|right"
                    />

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    app:materialIcon="chevron_right"
                    app:materialIconColor="@color/colorPrimary"
                    app:materialIconSize="24dp"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/more"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="详情介绍"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/more_text"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text=""
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical|right"
                    />

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    app:materialIcon="chevron_right"
                    app:materialIconColor="@color/colorPrimary"
                    app:materialIconSize="24dp"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>