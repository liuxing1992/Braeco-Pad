<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.braeco.braecowaiter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <FrameLayout
            android:id="@+id/top_tab"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/toolbar_black"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <FrameLayout
                    android:id="@+id/tab_fy_1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="5"
                    >

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />

                        <FrameLayout
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id = "@+id/order_num"
                                android:layout_width="20dip"
                                android:layout_height="20dip"
                                android:layout_gravity="right|top"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/tips_textview_bg"
                                android:gravity="center"
                                android:text="1"
                                android:textSize="13dip"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                />

                            <FrameLayout
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                >

                                <TextView
                                    android:id="@+id/tab_text_1"
                                    android:layout_height="match_parent"
                                    android:layout_width="wrap_content"
                                    android:text="订单"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/white"
                                    />

                            </FrameLayout>

                        </FrameLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tab_1"
                        android:layout_width="match_parent"
                        android:layout_height="5dip"
                        android:background="@color/yellow"
                        android:layout_gravity="bottom"
                        />

                </FrameLayout>

                <TextView
                    android:layout_height="20dp"
                    android:layout_width="0.5sp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    />

                <FrameLayout
                    android:id="@+id/tab_fy_2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="5"
                    >

                    <FrameLayout
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:id = "@+id/queue_num"
                            android:layout_width="20dip"
                            android:layout_height="20dip"
                            android:layout_gravity="right|top"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/tips_textview_bg"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="13dip"
                            android:textStyle="bold"
                            android:visibility="invisible"
                            android:textColor="@android:color/white"
                            />

                        <FrameLayout
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            >

                            <TextView
                                android:id="@+id/tab_text_2"
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                android:text="排队"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                />

                        </FrameLayout>

                    </FrameLayout>

                    <TextView
                        android:id="@+id/tab_2"
                        android:layout_width="match_parent"
                        android:layout_height="5dip"
                        android:background="@color/yellow"
                        android:layout_gravity="bottom"
                        />

                </FrameLayout>

                <TextView
                    android:layout_height="20dp"
                    android:layout_width="0.5sp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    />

                <FrameLayout
                    android:id="@+id/tab_fy_3"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="5"
                    >

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />

                        <FrameLayout
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id = "@+id/service_num"
                                android:layout_width="20dip"
                                android:layout_height="20dip"
                                android:layout_gravity="right|top"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/tips_textview_bg"
                                android:gravity="center"
                                android:text="1"
                                android:textSize="13dip"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                />

                            <FrameLayout
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp"
                                >

                                <TextView
                                    android:id="@+id/tab_text_3"
                                    android:layout_height="match_parent"
                                    android:layout_width="wrap_content"
                                    android:text="服务"
                                    android:gravity="center"
                                    android:textSize="16sp"
                                    android:layout_gravity="center"
                                    android:textColor="@color/white"
                                    />

                            </FrameLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0"
                                />

                        </FrameLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tab_3"
                        android:layout_width="match_parent"
                        android:layout_height="5dip"
                        android:background="@color/yellow"
                        android:layout_gravity="bottom"
                        />

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/toolbar_black"
        >

        <FrameLayout
            android:layout_height="48dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/message_layout"
            >

            <FrameLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                >

                <ImageView
                    android:id="@+id/message_icon"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@drawable/icon_message_checked"
                    android:padding="2dp"
                    android:layout_gravity="center_horizontal|top"
                    />

                <TextView
                    android:id = "@+id/message_num"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"
                    android:background="@drawable/tips_textview_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="13dip"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    />

            </FrameLayout>

            <TextView
                android:id="@+id/message_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="消息"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal|bottom"
                android:paddingBottom="3dp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_height="48dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/service_layout"
            >

            <ImageView
                android:id="@+id/service_icon"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@drawable/icon_service_checked"
                android:padding="2dp"
                android:layout_gravity="center_horizontal|top"
                />

            <TextView
                android:id="@+id/service_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="服务"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal|bottom"
                android:paddingBottom="3dp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_height="48dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/me_layout"
            >

            <ImageView
                android:id="@+id/me_icon"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@drawable/icon_shop_checked"
                android:padding="2dp"
                android:layout_gravity="center_horizontal|top"
                />

            <TextView
                android:id="@+id/me_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="我"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal|bottom"
                android:paddingBottom="3dp"
                />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
