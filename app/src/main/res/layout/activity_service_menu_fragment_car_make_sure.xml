<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.braeco.braecowaiter.MeFragmentShop"
    android:orientation="vertical"
    android:background="@color/background_gray">

    <FrameLayout
        android:layout_height="@dimen/action_bar_height"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        >

        <LinearLayout
            android:id="@+id/back"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            >

            <net.steamcrafted.materialiconlib.MaterialIconView
                android:layout_width="48dp"
                android:layout_height="match_parent"
                app:materialIcon="chevron_left"
                app:materialIconColor="@color/white"
                app:materialIconSize="24dp"
                android:scaleType="center"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="购物车"
                android:textColor="@color/white"
                android:textSize="@dimen/action_bar_text_size"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确认订单"
            android:textColor="@color/white"
            android:textSize="@dimen/action_bar_title_text_size"
            />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="桌位"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/table_result"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text=""
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical|right"
                    />

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    app:materialIcon="chevron_right"
                    app:materialIconColor="@color/colorPrimary"
                    app:materialIconSize="24dp"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/people"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="1dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="人数"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/people_result"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text=""
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical|right"
                    />

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    app:materialIcon="chevron_right"
                    app:materialIconColor="@color/colorPrimary"
                    app:materialIconSize="24dp"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="1dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="订单备注"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/remark_result"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text=""
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:ellipsize="marquee"
                    android:gravity="center_vertical|right"
                    />

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    app:materialIcon="chevron_right"
                    app:materialIconColor="@color/colorPrimary"
                    app:materialIconSize="24dp"
                    android:scaleType="center"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/indoor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="堂食"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                    android:id="@+id/indoor_check"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:padding="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    app:stroke_width="1dp"
                    app:stroke_color="@color/colorPrimary"
                    app:circle_color="@color/background_gray"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/outdoor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="1dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="外带"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                    android:id="@+id/outdoor_check"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:padding="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    app:stroke_width="1dp"
                    app:stroke_color="@color/colorPrimary"
                    app:circle_color="@color/background_gray"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cash"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="现金付款"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                    android:id="@+id/cash_check"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:padding="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    app:stroke_width="1dp"
                    app:stroke_color="@color/colorPrimary"
                    app:circle_color="@color/background_gray"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/wechat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="1dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="微信扫码付款"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                    android:id="@+id/wechat_check"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:padding="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    app:stroke_width="1dp"
                    app:stroke_color="@color/colorPrimary"
                    app:circle_color="@color/background_gray"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/alipay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="1dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="支付宝扫码付款"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                    android:id="@+id/alipay_check"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:padding="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    app:stroke_width="1dp"
                    app:stroke_color="@color/colorPrimary"
                    app:circle_color="@color/background_gray"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/balance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_me_tab_height"
                android:background="@drawable/selector_linear_layout"
                android:clickable="true"
                android:layout_marginTop="1dp"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/fragment_me_tab_title"
                    android:text="会员余额付款"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    />

                <com.github.lguipeng.library.animcheckbox.AnimCheckBox
                    android:id="@+id/balance_check"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:padding="4dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    app:stroke_width="1dp"
                    app:stroke_color="@color/colorPrimary"
                    app:circle_color="@color/background_gray"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_height="@dimen/action_bar_height"
        android:layout_width="match_parent"
        android:background="@color/white"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/gray"
            />

        <TextView
            android:id="@+id/sum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="合计：¥ 105"
            android:textColor="@color/price_color"
            android:textSize="@dimen/action_bar_text_size"
            android:paddingLeft="20dp"
            />

        <LinearLayout
            android:id="@+id/make_sure"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/button_sure"
            android:layout_gravity="right"
            >

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="结账"
                android:textColor="@android:color/white"
                android:textSize="@dimen/action_bar_title_text_size"
                />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>